<launch>
    <let name="urdf_file" value="$(find-pkg-share cleaner_description)/urdf/cleaner_gazebo.urdf.xacro"/>
    <let name="rviz_config_file" value="$(find-pkg-share cleaner_description)/rviz/cleaner_default.rviz"/>
    <let name="nav2_params" value="$(find-pkg-share cleaner_navigation)/param/nav2_params.yaml"/>
    <let name="map_path" value="$(find-pkg-share cleaner_bringup)/maps/basic_map.yaml"/>

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(command 'xacro $(var urdf_file)')"/>
    </node>

    <!-- run gazebo -->
    <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py">
        <!-- <arg name="world" value="$(find-pkg-share cleaner_bringup)/worlds/test_world.world"/> -->
        <!-- <arg name="world" value="$(find-pkg-share cleaner_bringup)/worlds/turtlebot3_world.world"/> -->
        <arg name="use_sim_time" value="true"/>
        <arg name="world" value="$(find-pkg-share cleaner_bringup)/worlds/basic_world.world"/>
        <arg name="params-file" value="$(find-pkg-share cleaner_description)/params/gazebo_params.yaml"/>
    </include>

    <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config_file)"/>

    <!-- ros2 run gazebo_ros spawn_entity.py -topic robot_description -entity cleaner -->
    <node pkg="gazebo_ros" exec="spawn_entity.py"
        args= "-topic robot_description -entity cleaner -x 2 -y 2 -z 0.01"/>


    <!-- ROS2 Control Diff drive -->
    <node pkg="controller_manager" exec="spawner" args="diff_cont"/>
    <node pkg="controller_manager" exec="spawner" args="joint_broad"/>


    <!-- Navigation Stack Launch -->
    <include file="$(find-pkg-share nav2_bringup)/launch/bringup_launch.py">
        <arg name="use_sim_time" value="true"/>
        <arg name="map" value="$(var map_path)"/>
        <arg name="params_file" value="$(var nav2_params)"/>
    </include>

    <!-- Navigation Rviz Launch -->
    <include file="$(find-pkg-share nav2_bringup)/launch/rviz_launch.py">
        <arg name="use_sim_time" value="true"/>
    </include>

</launch>