<launch>
    <let name="urdf_file" value="$(find-pkg-share mecanum_description)/urdf/mecanum_gazebo.urdf.xacro"/>
    <let name="robot_description" value="$(command 'xacro $(var urdf_file)')"/>

    <let name="rviz_config_file" value="$(find-pkg-share mecanum_description)/rviz/mecanum_default.rviz"/>
    <let name="nav2_params" value="$(find-pkg-share mecanum_navigation)/param/nav2_params.yaml"/>
    <let name="nav2_map_path" value="$(find-pkg-share mecanum_bringup)/maps/basic_map.yaml"/>
    <let name="gazebo_map_path" value="$(find-pkg-share mecanum_bringup)/worlds/basic_world.world"/>
    <let name="gazebo_params_file" value="$(find-pkg-share mecanum_description)/params/gazebo_params.yaml"/>


    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value=/"$(var robot_description)">
    </node>

    <!-- run gazebo -->
    <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py">
        <arg name="use_sim_time" value="true"/>
        <arg name="world" value=/"$(var gazebo_map_path)">
        <arg name="params-file" value="$(var gazebo_params_file)"/>
    </include>

    <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config_file)"/>

    <!-- ros2 run gazebo_ros spawn_entity.py -topic robot_description -entity mecanum -->
    <node pkg="gazebo_ros" exec="spawn_entity.py"
        args= "-topic robot_description -entity mecanum -x 2 -y 2 -z 0.01"/>


    <!-- ROS2 Control Diff drive -->
    <node pkg="controller_manager" exec="spawner" args="diff_cont"/>
    <node pkg="controller_manager" exec="spawner" args="joint_broad"/>


    <!-- Navigation Stack Launch -->
    <include file="$(find-pkg-share nav2_bringup)/launch/bringup_launch.py">
        <arg name="use_sim_time" value="true"/>
        <arg name="map" value="$(var nav2_map_path)"/>
        <arg name="params_file" value="$(var nav2_params)"/>
    </include>

    <!-- Navigation Rviz Launch -->
    <include file="$(find-pkg-share nav2_bringup)/launch/rviz_launch.py">
        <arg name="use_sim_time" value="true"/>
    </include>

</launch>